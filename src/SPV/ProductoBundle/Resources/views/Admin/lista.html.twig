{% extends '::admin.html.twig' %}
{% block contenido %}
    <table>
        <tr>
            <td>id</td>
            <td>nombre</td>
        </tr>
        {% for producto in productos %}
            <tr>
                <td>{{ producto.id }}</td>
                <td>{{ producto.nombre }}</td>
                <td><a href="{{ path('editar_producto', {'id':producto.id}) }}">Modificar</a></td>
            </tr>
        {% endfor %}
    </table>
{% endblock %}