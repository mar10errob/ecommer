{% extends '::admin.html.twig' %}

{% block contenido %}
    <div class="row-fluid">
        <div class="block">
            <!-- block -->
            <div class="block">
                <div class="navbar navbar-inner block-header">
                    <div class="muted pull-left">Lista de Tipos de Proveedores</div>
                    <h5 class="text-right">
                        <a href="{{ path('tipoproveedor_new') }}">
                            Agregar un Tipo
                        </a>
                    </h5>
                </div>
            </div>

            <div class="block-content collapse in">
                <table class="stripe" id="table-index">
                    <thead>
                    <tr>
                        <th>Id</th>
                        <th>Descripcion</th>
                        <th>Acciones</th>
                    </tr>
                    </thead>
                    <tbody class="text-center">
                    {% for entity in entities %}
                        <tr>
                            <td>{{ entity.id }}</td>
                            <td>{{ entity.descripcion }}</td>
                            <td>
                                <ul>
                                    <li>
                                        <a href="{{ path('tipoproveedor_edit', { 'id': entity.id }) }}">Editar</a>
                                    </li>
                                    <li>
                                        <a href="{{ path('tipoproveedor_delete', { 'id': entity.id }) }}">Eliminar</a>

                                    </li>
                                </ul>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}
