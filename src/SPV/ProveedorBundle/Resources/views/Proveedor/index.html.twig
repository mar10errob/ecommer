{% extends '::admin.html.twig' %}
{% block contenido %}
    <div class="block">
        <!-- block -->
        <div class="block">
            <div class="navbar navbar-inner block-header">
                <div class="muted pull-left">Lista de Proveedores</div>
                <h5 class="text-right"><a href="{{ path('proveedor_registro') }}">Agregar un Proveedor</a></h5>
            </div>
        </div>

        <div class="block-content collapse in">
            <table class="stripe" id="table-index">
                <thead>
                <tr>
                    <th>Id</th>
                    <th>Nombre</th>
                    <th>Acciones</th>
                </tr>
                </thead>
                <tbody class="text-center">
                {% for entity in entities %}
                    <tr>
                        <td>{{ entity.id }}</td>
                        <td><a href="{{ path('proveedor_show', { 'id': entity.id }) }}">{{ entity.nombre }}</a></td>
                        <td>
                            <ul>
                                <li>
                                    <a href="{{ path('editar_proveedor', { 'id': entity.id }) }}">Editar</a>
                                </li>
                                <li>
                                    <a href="{{ path('delete_proveedor', { 'id': entity.id }) }}">Eliminar</a>
                                </li>
                            </ul>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>

{% endblock %}
