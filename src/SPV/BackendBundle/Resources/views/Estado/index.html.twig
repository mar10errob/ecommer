{% extends '::admin.html.twig' %}

{% block contenido %}
    <div class="block">
        <!-- block -->
        <div class="block">
            <div class="navbar navbar-inner block-header">
                <div class="muted pull-left">Lista de Estados</div>
                <h5 class="text-right">
                    <a href="{{ path('estado_new') }}">
                        Agregar un Estado
                    </a>
                </h5>
            </div>
        </div>

        <div class="block-content collapse in">
            <table class="stripe" id="table-index">
                <thead>
                <tr>
                    <th>Id</th>
                    <th>Nombre</th>
                    <th>Acciones</th>
                </tr>
                </thead>
                <tbody class="text-center">
                {% for entity in entities %}
                    <tr>
                        <td>{{ entity.id }}</td>
                        <td>{{ entity.nombre }}</td>
                        <td>
                            <ul>
                                <li>
                                    <a href="{{ path('estado_edit', { 'id': entity.id }) }}">Editar</a>
                                </li>
                                <li><a href="{{ path('estado_delete',{'id': entity.id }) }}">Eliminar</a></li>
                            </ul>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
