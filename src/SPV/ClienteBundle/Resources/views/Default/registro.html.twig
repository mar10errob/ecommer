{% extends '::public.html.twig' %}
{% block title %}{{ accion=='crear' ? 'Registrate' : 'Modificar'}}{% endblock %}
{% block id %}{{ accion=='crear' ? 'registro' : 'modificar'}}{% endblock %}
{% block registro %}active{% endblock %}
{% block fullcontenido %}
    <section>
        <div class="container">
            <div class="breadcrumbs">
                <ol class="breadcrumb">
                    <li><a href="#">Home</a></li>
                    <li class="active">{{ accion=='crear' ? 'Registro' : 'Modificar'}}</li>
                </ol>
            </div><!--/breadcrums-->
        </div>
    </section>
    <section id="form"><!--form-->
        <div class="container signup-form">
            <h2>Usuario Nuevo ¡Registrate!</h2>
            <form action="{{ accion == 'crear' ? path('cliente_regsitro') : path('modificar_cliente') }}" method="post">
                <div class="row">
                    <div class="col-xs-4 col-sm-4 col-md-4 col-lg-4">
                        <label for="">Datos Personales</label>
                        {{ form_widget(formcliente.nombre, {'attr':{
                            'placeholder':'Nombre(s)'
                        }}) }}
                        {{ form_widget(formcliente.apellidoPaterno, {'attr':{
                            'placeholder':'Apellido Paterno'
                        }}) }}
                        {{ form_widget(formcliente.apellidoMaterno, {'attr':{
                            'placeholder':'Apellido Materno'
                        }}) }}
                        {{ form_widget(formcliente.email, {'attr':{
                            'placeholder':'Email'
                        }}) }}
                        {% if accion == 'crear' %}
                        {{ form_widget(formcliente.password.first,{ 'attr': {
                            'placeholder' : 'Contraseña'
                        } }) }}
                        {{ form_widget(formcliente.password.second,{ 'attr': {
                            'placeholder' : 'Repetir Contraseña'
                        } }) }}
                        {% endif %}
                    </div>
                    <div class="col-xs-4 col-sm-4 col-md-4 col-lg-4">
                        <label for="">Fecha de Nacimiento</label>
                        <div class="row">
                            <div class="col-xs-4 col-sm-4 col-md-4 col-lg-4">
                                {{ form_widget(formcliente.fechaNacimiento.day) }}
                            </div>
                            <div class="col-xs-4 col-sm-4 col-md-4 col-lg-4">
                                {{ form_widget(formcliente.fechaNacimiento.month) }}
                            </div>
                            <div class="col-xs-4 col-sm-4 col-md-4 col-lg-4">
                                {{ form_widget(formcliente.fechaNacimiento.year) }}
                            </div>
                        </div>
                        {{ form_widget(formcliente.curp, {'attr':{
                        'placeholder':'CURP'
                        }}) }}
                        {{ form_widget(formcliente.telefono, {'attr':{
                        'placeholder':'Telefono'
                        }}) }}
                    </div>
                    <div class="col-xs-4 col-sm-4 col-md-4 col-lg-4">
                        <label for="">Dirección</label>
                        {{ form_widget(formdireccion.estado) }}
                        {{ form_widget(formdireccion.colonia) }}
                        {{ form_widget(formdireccion.calle, {'attr':{
                        'placeholder':'Calle'
                        }}) }}
                        {{ form_widget(formdireccion.numeroExterior, {'attr':{
                        'placeholder':'Numero Exterior'
                        }}) }}
                        {{ form_widget(formdireccion.numeroInterior, {'attr':{
                        'placeholder':'Numero Interior'
                        }}) }}
                    </div>
                </div>
                {{ form_rest(formcliente) }}
                {{ form_rest(formdireccion) }}
                <button type="submit" class="btn btn-default">{{ accion == 'crear' ? 'Registrar' : 'Modificar' }}</button>
            </form>
        </div>
    </section><!--/form-->
{% endblock %}