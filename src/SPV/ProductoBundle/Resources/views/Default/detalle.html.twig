{% extends '::public.html.twig' %}
{% block title %}Detalle{% endblock %}
{% block id %}detalle{% endblock %}
{% block productos %}active{% endblock %}
{% block buscar %}
    <div class="search_box pull-right">
        <input type="text" placeholder="Buscar"/>
    </div>
{% endblock %}
{% block migas %}
    <div class="breadcrumbs">
        <ol class="breadcrumb">
            <li><a href="{{ path('portada') }}">Home</a></li>
            <li><a href="{{ path('productos') }}">Productos</a></li>
            <li class="active">Detalles</li>
        </ol>
    </div>
{% endblock %}
{% block contenido %}
    <div class="product-details"><!--product-details-->
        <div class="col-sm-6">
            <div class="view-product">
                <img src="{{ asset( producto.imagen != null ? 'uploads/images/productos/'~producto.imagen : 'uploads/images/productos/img-default.png' ) }}" alt=""/>
                <h3>ZOOM</h3>
            </div> <br><br>
        </div>
        <div class="col-sm-6">
            <div><!--/product-information-->
                <img src="{{ asset('images/product-details/new.jpg') }}" class="newarrival" alt="" />
                <br>
                <h3>{{ producto.nombre | upper}}</h3>
                <h4>{{ producto.descripcion }}</h4>
                <p>Web ID: {{ producto.id }}</p>
                <img src="{{ asset('images/product-details/rating.png') }}" alt="" /><br><br>
				<span>
                    <span class="precio">MX {{ producto.precioUnitario | number_format(2,'.',',') }}</span>
					<div class="cart_quantity_button">
                        {# <label>Cantidad:</label> #}
                        <a class="cart_quantity_up" href="#" id="mas"> + </a>
                        <input class="cart_quantity_input" type="text" value="1" autocomplete="off" size="2" id="cantidad">
                        <a class="cart_quantity_down" href="#" id="menos"> - </a>
                    </div>
				</span> <br><br>
                <a href="{{ path('add_carrito', {'producto': producto.id }) }}" class="btn btn-fefault cart" id="add-car">
                    <i class="fa fa-shopping-cart"></i> Agregar al carrito
                </a>
                
                <p><b>Disponible:</b> {{ producto.existencia }}</p>
                <p><b>Ranking:</b> {{ producto.ranking }}</p>
                <p><b>Marca:</b> E-SHOPPER</p>
                <a href=""><img src="{{ asset('images/product-details/share.png') }}" class="share img-responsive"  alt="" /></a>
            </div><!--/product-information-->
        </div>
    </div><!--/product-details-->
    <br/><br/>

    <div class="recommended_items"><!--recommended_items-->
        <h2 class="title text-center">productos recomendados</h2>

        <div id="recommended-item-carousel" class="carousel slide" data-ride="carousel">
            <div class="carousel-inner">
                <div class="item active">
                    {% for i in 1..3 %}
                    <div class="col-sm-4">
                        <div class="product-image-wrapper">
                            <div class="single-products">
                                <div class="productinfo text-center">
                                    <img src="{{ asset('images/home/recommend1.jpg') }}" alt="" />
                                    <h2>$56</h2>
                                    <p>Easy Polo Black Edition</p>
                                    <button type="button" class="btn btn-default add-to-cart"><i class="fa fa-shopping-cart"></i>Agregar al carrito</button>
                                </div>
                            </div>
                        </div>
                    </div>
                        {% endfor %}
                </div>
                <div class="item">
                    {% for i in 1..3 %}
                    <div class="col-sm-4">
                        <div class="product-image-wrapper">
                            <div class="single-products">
                                <div class="productinfo text-center">
                                    <img src="{{ asset('images/home/recommend2.jpg') }}" alt="" />
                                    <h2>$56</h2>
                                    <p>Easy Polo Black Edition</p>
                                    <button type="button" class="btn btn-default add-to-cart"><i class="fa fa-shopping-cart"></i>Agregar al carrito</button>
                                </div>
                            </div>
                        </div>
                    </div>
                        {% endfor %}
                </div>
            </div>
            <a class="left recommended-item-control" href="#recommended-item-carousel" data-slide="prev">
                <i class="fa fa-angle-left"></i>
            </a>
            <a class="right recommended-item-control" href="#recommended-item-carousel" data-slide="next">
                <i class="fa fa-angle-right"></i>
            </a>
        </div>
    </div><!--/recommended_items-->
{% endblock %}