{% extends '::admin.html.twig' %}
{% block contenido %}
    <div class="block">
        <!-- block -->
        <div class="block">
            <div class="navbar navbar-inner block-header">
                <div class="muted pull-left">Lista de Clientes</div>
            </div>
        </div>

        <div class="block-content collapse in">
            <table class="stripe" id="table-index">
                <thead>
                <tr>
                    <th>Id</th>
                    <th>Nombre</th>
                    {# <th>Apellido Paterno</th>
                    <th>Apellido Materno</th> #}
                    <th>Fecha de Nacimiento</th>
                    <th>Direccion</th>
                    <th>Curp</th>
                    <th>Email</th>
                    <th>Telefono</th>
                    <th>Saldo</th>
                    <th>Status</th>
                    <th>Acciones</th>
                </tr>
                </thead>
                <tbody class="text-center">
                {% for entity in entities %}
                    <tr>
                        <td>{{ entity.id }}</td>
                        <td><a href="{{ path('cliente_show', { 'id': entity.id }) }}">{{ entity.nombre~" "~entity.apellidoPaterno~" "~entity.apellidoMaterno }}</a></td>
                        <td>{% if entity.fechaNacimiento %}{{ entity.fechaNacimiento|date('d/m/Y') }}{% endif %}</td>
                        <td>{{ entity.direccion}}</td>
                        <td>{{ entity.curp }}</td>
                        <td>{{ entity.email }}</td>
                        <td>{{ entity.telefono }}</td>
                        <td>{{ entity.saldo }}</td>
                        {% if entity.status %}
                        <td>Activo</td>
                        <td><a href="{{ path('cliente_desactivar',{'id' : entity.id}) }}">Desactivar</a></td>
                        {% else %}
                        <td>Inactivo</td>
                        <td><a href="{{ path('cliente_activar',{'id' : entity.id}) }}">Activar</a></td>
                        {% endif %}
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>

{% endblock %}
