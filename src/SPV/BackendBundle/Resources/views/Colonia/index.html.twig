{% extends '::admin.html.twig' %}

{% block contenido %}
    <div class="block">
        <!-- block -->
        <div class="block">
            <div class="navbar navbar-inner block-header">
                <div class="muted pull-left">Lista de Colonias</div>
                <h5 class="text-right">
                    <a href="{{ path('colonia_new') }}">
                        Agregar una Colonia
                    </a></h5>
            </div>
        </div>

        <div class="block-content collapse in">
            <table class="table table-striped">
                <thead>
                <tr>
                    <th>Id</th>
                    <th>Nombre</th>
                    <th>Codigo Postal</th>
                    <th>Estado</th>
                    <th>Acciones</th>
                </tr>
                </thead>
                <tbody>
                {% for entity in entities %}
                    <tr>
                        <td>{{ entity.id }}</td>
                        <td>{{ entity.nombre }}</td>
                        <td>{{ entity.codigoPostal }}</td>
                        <td>{{ entity.estado }}</td>
                        <td>
                            <ul>
                                <li>
                                    <a href="{{ path('colonia_edit', { 'id': entity.id }) }}">Editar</a>
                                </li>
                            </ul>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
