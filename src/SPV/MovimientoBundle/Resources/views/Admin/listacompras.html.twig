{% extends '::admin.html.twig' %}
{% block contenido %}
    <div class="row-fluid">
        <div class="block">
            <!-- block -->
            <div class="block">
                <div class="navbar navbar-inner block-header">
                    <div class="muted pull-left">Compras a Proveedores</div>
                </div>
            </div>
            <div class="block-content collapse in">
                <table class="stripe" id="table-index">
                    <thead>
                    <tr>
                        <th>Proveedor</th>
                        <th>Fecha de Registro</th>
                        <th></th>
                    </tr>
                    </thead>
                    <tbody class="text-center">
                    {% for compra in compras %}
                        <tr>
                            <td>{{ compra.proveedor.nombre }}</td>
                            <td>{{ compra.fechaCreacion | date('d/m/y h:m:s') }}</td>
                            <td>
                                <ul>
                                    <li><a href="{{ path('lista_detalles',{ 'id' : compra.id }) }}">Detalles</a></li>
                                    <li><a href="{{ path('delete_compra',{ 'id' : compra.id }) }}">Eliminar</a></li>
                                </ul>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
        <!-- /block -->
    </div>
{% endblock %}